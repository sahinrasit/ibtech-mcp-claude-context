{
    "name": "ibtech-mcp-claude-context",
    "version": "0.1.3",
    "description": "Model Context Protocol integration for Claude Context",
    "keywords": [
        "ibtech",
        "semantic",
        "search",
        "codebase",
        "as",
        "is",
        "analyse"
    ],
    "homepage": "https://github.com/zilliztech/claude-context#readme",
    "bugs": {
        "url": "https://github.com/zilliztech/claude-context/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zilliztech/claude-context.git",
        "directory": "packages/mcp"
    },
    "license": "MIT",
    "author": "Raşit Şahin",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "claude-context-mcp": "dist/index.js"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "pnpm clean && tsc --build --force",
        "dev": "tsx --watch src/index.ts",
        "clean": "rimraf dist",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "typecheck": "tsc --noEmit",
        "start": "tsx src/index.ts",
        "start:with-env": "OPENAI_API_KEY=${OPENAI_API_KEY:your-api-key-here} MILVUS_ADDRESS=${MILVUS_ADDRESS:localhost:19530} tsx src/index.ts",
        "test:mcp": "node test-mcp.cjs",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.12.1",
        "@zilliz/claude-context-core": "latest",
        "express": "^4.18.2",
        "zod": "^3.25.55"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^20.0.0",
        "rimraf": "^6.0.1",
        "tsx": "^4.19.4",
        "typescript": "^5.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
